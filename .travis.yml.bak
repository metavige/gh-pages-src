language: node_js

sudo: false

branches:
  only:
    - master

cache:
  - npm

node_js:
  - "lts/*"

before_script:
  - npm install
  - hexo cl

script:
  - hexo generate

deploy:
  provider: pages
  skip-cleanup: true
  github-token: $GITHUB_TOKEN
  repo: metavige/metavige.github.io
  keep-history: true
  verbose: true
  on:
    branch: master
  local-dir: public
